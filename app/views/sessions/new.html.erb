<h1>Sign in</h1>

<%= form_for(:sessions, :url => sessions_path) do |f| %>
  <div class="field">   
    <%= f.label :email %><br />
    <%= f.text_field :email %><br />

    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
  </div>
  <div class="actions">
    <%= f.submit "Sign in", class: "btn btn-primary" %><br />
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now", signup_path %></p>